{
  "name": "CUDA Development Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/nvidia-cuda:1": {
      "installCudnn": true,
      "cudaVersion": "11.8",
      "cudnnVersion": "8"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "nvidia.nsight-vscode-edition"
      ]
    }
  },
  "postCreateCommand": "nvcc --version && nvidia-smi"
}
